                        <% if(promotion.get("iPhoneLandscapeWH")){ %>
                        <img id='img-iphone-landscape-w-h' class="clickable_image" src="<%= promotion.get("iPhoneLandscapeWH").url()%>" />
                        <% } %>
                    </div>
                </div>
            </div>
            <h5 class="clean_style more_padding_top">iPad Retina</h5>
            <hr>
            <div class="form-group more_height">
                <div class="inline float_left">
                    <label for="ipad-portrait-h">Portrait (1536 x 960)</label> <input type="file" class="recommandFile file_width" name="iPadPortraitH" id="ipad-portrait-h">
                    <div class="imageFile" widthheight="1536 x 960">
                        <% if(promotion.get("iPadPortraitH")){ %><img id="img-ipad-portrait-h" class='clickable_image' widthheight="1536 x 960" src="<%= promotion.get("iPadPortraitH").url()%>" />
                        <% } %>
                    </div>
                </div>
                <div class="inline float_right">
                    <label for="ipad-landscape-h">Landscape (1234 x 1536)</label> <input type="file" class="recommandFile file_width" name="iPadLandscapeH" id="ipad-landscape-h">
                    <div class="imageFile" widthheight="1234 x 1536">
                        <% if(promotion.get("iPadLandscapeH")){ %>
                        <img id="img-ipad-landscape-h" class='clickable_image' widthheight="1234 x 1536" src="<%= promotion.get("iPadLandscapeH").url()%>" />
                        <% } %>
                    </div>
                </div>
            </div>
 
 
            <% } %>
            <% if(promotion.get('mediaType') == "video"){ %>
            <h5>iPhone 3.5 inch screen</h5>
            <hr>
            <div class="form-group more_height">
                <div class="inline float_left">
                    <label for="iphone-portrait-h">Portrait (640 x 386)</label> <input type="file" class="recommandFile file_width" name="iPhonePortraitH" id="iphone-portrait-h">
                    <div class="imageFile" widthheight="640 x 386">
                        <% if(promotion.get("iPhonePortraitH")){ %>
                        <video controls class='media-video' widthheight="640 x 386" src="<%= promotion.get("iPhonePortraitH").url()%>"></video>
                        <%} %>
                    </div>
                </div>
                <div class="inline float_right">
                    <label for="iphone-landscape-h">Landscape (580 x 640)</label> <input type="file" class="recommandFile file_width" name="iPhoneLandscapeH" id="iphone-landscape-h">
                    <div class="imageFile" widthheight="580 x 640">
                        <% if(promotion.get("iPhoneLandscapeH")){ %>
                        <video controls class='media-video' widthheight="580 x 640" src="<%= promotion.get("iPhoneLandscapeH").url()%>"></video>
                        <% } %>
                    </div>
                </div>
            </div>
            <h5 class="clean_style more_padding_top">iPhone 4 inch screen</h5>
            <hr>
 
