                <div class="inline float_right">
                    <label for="iphone-landscape-h">Landscape (580 x 640)</label> <input type="file" class="recommandFile file_width" name="iPhoneLandscapeH" id="iphone-landscape-h">
                    <div class="imageFile" widthheight="580 x 640">
                        <% if(promotion.get("iPhoneLandscapeH")){ %>
                        <img id='img-iphone-landscape-h' class="clickable_image" src="<%= promotion.get("iPhoneLandscapeH").url()%>" />
                        <% } %>
                    </div>
                </div>
            </div>
            <br> <br>
            <h5 class="clean_style more_padding_top">iPhone 4 inch screen</h5>
            <hr>
            <div class="form-group more_height">
                <div class="inline float_left">
                    <label for="iphone-portrait-w-h">Portrait (640 x 532)</label> <input type="file" class="recommandFile file_width" name="iPhonePortraitWH" id="iphone-portrait-w-h">
                    <div class="imageFile" widthheight="640 x 532">
                        <% if(promotion.get("iPhonePortraitWH")){ %>
                        <img id='img-iphone-portrait-w-h' class="clickable_image" src="<%= promotion.get("iPhonePortraitWH").url()%>" />
                        <% } %>
