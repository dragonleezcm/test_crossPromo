            <div class="more_little_height_both">
                <h4 class="inline">Images/Videos</h4>
                    <font class="red_inline"> * </font> Media Type <input class="mediaClass" name="promotion[mediaType]" value="image" type="radio" <% if(promotion.get('mediaType') == "image"){ %> checked
                        <% } %>> Image <input class="mediaClass" name="promotion[mediaType]" value="video" type="radio" <% if(promotion.get('mediaType') == "video"){ %> checked <% } %>> Video <br>
                    <br>
            </div>
            <% if(promotion.get('mediaType') == "image"){ %>
            <h5>iPhone 3.5 inch screen</h5>
            <hr>
            <div class="form-group more_height">
                <div class="inline float_left">
                    <label for="iphone-portrait-h">Portrait (640 x 386) <!--                   <input type="button" onclick="CrossPromoUtils.uploadImage('iphone-portrait-h','#img-iphone-portrait-h');" value="Priview"
