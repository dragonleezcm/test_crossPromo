<form action="create" method="post" role="form">
    <div class="more_little_height_bottom gray_bk_color" style="width: 1024px; height: 35px;">
        <% if(promotion.get('active')){ %>
        <span class="activeLabel">This ad is currently active in the Parent's section</span>
        <button id="activate" class="btn btn-default" style="float: right; background-color: red; color: white;">Deactivate this ad</button>
        <% }else{ %>
        <span class="activeLabel">This ad is currently inactive in the Parent's section</span>
        <button id="activate" class="btn btn-default" style="float: right; background-color: green; color: white;">Activate this ad</button>
        <% } %>
    </div>
 
    <div class="clean_style">
        <div class="add_edit_split_no_margin">
            <div class="more_little_height_both">
                <h4 class="inline ">Ad Information</h4>
            </div>
            <div class="form-group">
                <label for="app-name">Name of Ad</label>
                <div>
                    <input type="input" class="form-control split_input inline" maxlength="100" name="promotion[title]" id="ad-name" value="<%= promotion.get('title') %>"><font class="red_inline"> * </font>
                </div>
            </div>
            <input type="hidden" id="token" value="edit" readonly /> <input type="hidden" id="orgMediaType" value="<%=promotion.get('mediaType') %>" readonly />
            <div>
                <input type="text" id="hideCompanyId" value="" readonly />
            </div>
            <div class="form-group">
                <h5>Include in the following apps:</h5>
                <div class="checkbox">
                    <label> <input class="check" id="select-all" type="checkbox"> <span class="black_font">Select All</span>
                    </label>
                </div>
                <% for(var i=0; i< applications.length; i++){ %>
                <div class="checkbox">
                    <label> <input class="check" name="applications[]" value="<%= applications[i].id %>" type="checkbox" <% if(apps.indexOf(applications[i].id) != -1){ %> checked <%}%>> <span class="black_font"><%= applications[i].get('name') %></span>
                    </label>
                </div>
                <% } %>
 
            </div>
            <h5 class="margin_bwt_parts_vertical">Dates Live</h5>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                    <div>
                        <label class="inline" for="start-date">Start Date</label><font class="red_inline"> * </font>
                    </div>
                    <input id="start-date" name="promotion[startDate]" type="text" class="form-control promotion-data date_input" onclick="new Calendar().show(this);" readonly
                        value="<% if(promotion.get('startDate')){%><%= promotion.get('startDate')%><%}%>">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                    <div>
                        <label class="inline" for="end-date">End Date</label><font class="red_inline"> * </font>
                    </div>
                    <input id="end-date" name="promotion[endDate]" type="text" class="form-control promotion-data date_input" onclick="new Calendar().show(this);" readonly
                        value="<% if(promotion.get('endDate')){%><%= promotion.get('endDate')%><%}%>">
                </div>
            </div>
            <div class="clean_style"></div>
            <h4 class="margin_bwt_parts_vertical">Link Information</h4>
            <div class="form-group">
                <label for="outlink">Outlink</label> <input type="text" name="promotion[outlink]" maxlength="200" class="form-control split_input" id="outlink" value="<%= promotion.get('outlink') %>"  placeholder="Outlink"><br>
                <label for="outlinkHD">Outlink HD</label> <input type="text" name="promotion[outlinkHD]" maxlength="200" class="form-control split_input" id="outlinkHD" value="<%= promotion.get('outlinkHD') %>"  placeholder="Outlink HD"><br>
                <label for="link-type">Type of link:</label><br>
                <div class="inline float_left" style="margin-right: 140px;">
                    <input class="promotion-data" name="promotion[linkType]" value="Apple App Store" type="radio" <% if(promotion.get('linkType') == "Apple App Store"){ %> checked <% } %>> Apple App Store<br>
                    <input class="promotion-data" name="promotion[linkType]" value="TV (iTunes)" type="radio" <% if(promotion.get('linkType') == "TV (iTunes)"){ %> checked <% } %>> TV (iTunes)<br> <input
                        class="promotion-data" name="promotion[linkType]" value="Music (iTunes)" type="radio" <% if(promotion.get('linkType') == "Music (iTunes)"){ %> checked <% } %>> Music (iTunes)<br> <input
                        class="promotion-data" name="promotion[linkType]" value="Books (iTunes)" type="radio" <% if(promotion.get('linkType') == "Books (iTunes)"){ %> checked <% } %>> Books (iTunes)<br>
                </div>
                <div class="inline">
 
                    <input class="promotion-data" name="promotion[linkType]" value="Podcast (iTunes)" type="radio" <% if(promotion.get('linkType') == "Podcast (iTunes)"){ %> checked <% } %>> Podcast (iTunes)<br>
                    <input class="promotion-data" name="promotion[linkType]" value="Google Play Store" type="radio" <% if(promotion.get('linkType') == "Google Play Store"){ %> checked <% } %>> Google Play
                    Store<br> <input class="promotion-data" name="promotion[linkType]" value="Web" type="radio" <% if(promotion.get('linkType') == "Web"){ %> checked <% } %>> Web<br> <input
                        class="promotion-data" name="promotion[linkType]" value="None" type="radio" <% if(promotion.get('linkType') == "None"){ %> checked <% } %>> None<br>
                </div>
            </div>
            <br>
            <!-- Featured Area -->
            <div class="form-inline">
            <h4 class="inline margin_bwt_parts_vertical margin_right_little">Featured Information</h4>      
                    Featured? <input class="featured" name="promotion[featured]" value="true" type="radio" <% if(promotion.get('featured') == "true"){ %> checked <% } %>> Yes <input class="featured"
                    name="promotion[featured]" value="false" type="radio" <% if(promotion.get('featured') == "false"){ %> checked <% } %>> No <br> <br>
            </div>
            <div class="featureArea more_height">
    <div>If featured, the app will appear on the Parent's Section lock and</div>
                 will be prioritized in the rotation.
                                <h5 class="more_little_height_both">Dates Live</h5>
                <div class="col-lg-6 col-md-6 col-sm-6 ">
                    <div class="form-group">
                        <label for="feature-start-date">Start Date</label> <input name="promotion[featureStartDate]" id="feature-start-date" type="text" class="form-control promotion-data date_input"
                            onclick="new Calendar().show(this);" readonly value="<% if(promotion.get('featureStartDate')){%><%= promotion.get('featureStartDate')%><%}%>">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 ">
                    <div class="form-group">
                        <label for="feature-end-date">End Date</label> <input id="feature-end-date" name="promotion[featureEndDate]" type="text" class="form-control promotion-data date_input"
                            onclick="new Calendar().show(this);" readonly value="<% if(promotion.get('featureEndDate')){ %><%= promotion.get('featureEndDate')%><%}%>">
                    </div>
                </div>
                <div class="form-group">
                    <h5>Featured Button Image</h5>
                    <div class="inline float_left">
                        <label for="feature-image">iPhone 4 (180x68) </label> <input type="file" class="featuredImage file_width" name="iPhoneFeatureImage" id="iphone-feature-image">
                        <div class="imageFile" widthheight="180x68">
                            <% if(promotion.get("iPhoneFeatureImage")){ %><img widthheight="180x68" class='clickable_image feature-media-image' src="<%= promotion.get("iPhoneFeatureImage").url()%>" />
                            <% } %>
                        </div>
                    </div>
                    <div class="inline float_right">
                        <label for="feature-image">iphone 5 (200x75) </label> <input type="file" class="featuredImage file_width" name="iPadFeatureImage" id="ipad-feature-image">
                        <div class="imageFile" widthheight="200x75">
                            <% if(promotion.get("iPadFeatureImage")){ %><img widthheight="200x75" class='clickable_image feature-media-image' src="<%= promotion.get("iPadFeatureImage").url()%>" />
                            <% } %>
                        </div>
                    </div>
<br>
                    <div class="clean_style   more_padding_top">
                        <label for="feature-image">iPad Retina (300x112) </label> <input type="file" class="featuredImage file_width" name="iPadRetinaFeatureImage" id="ipad-retina-feature-image">
                        <div class="imageFile" widthheight="300x112">
                            <% if(promotion.get("iPadRetinaFeatureImage")){ %><img widthheight="300x112" class='clickable_image feature-media-image' src="<%= promotion.get("iPadRetinaFeatureImage").url()%>" />
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
        <div class="vertical_line_add_edit"></div>
 
 
        <!-- right part -->
