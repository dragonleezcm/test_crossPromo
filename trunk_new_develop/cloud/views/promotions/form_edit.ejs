        </div>
        <div style="clear: both;" class="more_height"></div>
        <button id="submit" type="submit" class="btn btn-default edit_margin_middle">Save Changes</button>
        <% if(promotion.get('isOnline')){ %>
        <button id="online" class="btn btn-primary">Preview</button>
        <% }else{ %>
        <button id="online" class="btn btn-primary">Send to Live App</button>
        <% } %>
