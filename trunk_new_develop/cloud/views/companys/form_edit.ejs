<form action="" method="post" role="form">                       
    <div class="form-group">
        <label for="company-name">Company Name</label>
        <div>
        <input type="input" class="form-control inline" name="companyName" id="company-name"  value="<%= company.get('companyName') %>"><font class="red_inline"> * </font>
        </div>
    </div>                        
    <input type="hidden" id="isOwn" value='<%=isOwn%>'>                        
    <button id="submit" type="submit" class="btn btn-default">Save</button> 
    <% if(!isOwn){                      
        if(company.get('active')){ %> 
        <button id="activate" class="btn btn-primary">Deactivate</button>
    <% }else{ %>
        <button id="activate" class="btn btn-primary">Activate</button>
    <%} 
    } %>            
</form>